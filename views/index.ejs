<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Include Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-950">

    <div class="main w-full min-h-screen">
        <div class="form p-10 text-white">

            <form action="/create" method="post">

                
                <input class="block px-2 py-5 bg-zinc-800 w-full rounded-md outline-none mt-2"   type="text" placeholder="Title goes here" name="title">
               
                <textarea class="block px-2 py-5 bg-zinc-800 resize-none mt-2 w-full rounded-md outline-none " placeholder="Description goes here...." name="details"></textarea>

                <input class="mt-2 bg-blue-600 hover:text-sky-400 px-2 py-2 rounded-md"   type="submit" value="submit task">
            </form>

            

        </div>

        <div class="Task p-10 flex flex-wrap gap-3">

            <% if(file.length > 0){ %>
                <% file.forEach(function(val){ %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md ">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <a class="text-blue-700 inline-block mt-3" href="/files/<%= val %>">Read More</a>
                    </div>

                  
                    
                <% }) %>
            <% } else { %>
                <h1 class="text-white bg-zinc-500 rounded-md px-3 py-3">No tasks have been created yet</h1>
            <% } %>
            
         

         

        </div>
    </div>

    
      <script src="javascript/style.js"></script>
</body>
</html>
